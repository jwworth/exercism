#!/usr/bin/ruby

puts 'What exercise would you like to download?'
exercise = gets.chomp

puts 'In what language?'
language = gets.chomp

`exercism download --exercise=#{exercise} --track=#{language}`

case language
when 'ruby'
  `tmux send-keys -t -1 'vim -o ruby/#{exercise}/*.rb' Enter`
  exec "watch ruby -Itest ruby/#{exercise}/#{exercise}\_test.rb"
end
